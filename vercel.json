{
  "version": 2,
  "builds": [
    { "src": "html/**/*.html", "use": "@vercel/static" },
    { "src": "js/**/*", "use": "@vercel/static" },
    { "src": "css/**/*", "use": "@vercel/static" },
    { "src": "images/**/*", "use": "@vercel/static" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "destination": "https://form2chat.me/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/html/allForms.html" },
    { "source": "/(.*\\.html)", "destination": "/html/$1" },
    { "source": "/js/(.*)", "destination": "/js/$1" },
    { "source": "/css/(.*)", "destination": "/css/$1" },
    { "source": "/images/(.*)", "destination": "/images/$1" }
  ]
}
